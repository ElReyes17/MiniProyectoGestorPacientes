
@model List<GestorPacientes.Core.Application.ViewModels.Medicos.MedicosViewModel>
<div class="container-fluid">

    <div class="row mb-3">

        <h2 class="text-center nav-link text-dark fw-bold"> Mantenimiento De Medicos </h2>
        <div class="col-3 offset-9">
            <a class="btn btn-success" asp-controller="Medicos" asp-action="Create">Agregar Nuevo Medico</a>
        </div>
    </div>

    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-4 mb-3">
                <div class="card shadow-sm">

                    <img src="@item.Photo" class="img-product-size bd-placeholder-img card-img-top " />

                    <div class="card-body">

                        <h4>Nombre: @item.Name</h4>
                        <h4>Apellido: @item.LastName</h4>
                        <h4>Cedula: @item.CardNumber</h4>
                        <h4>Telefono: @item.PhoneNumber</h4>
                        <h4>Correo: @item.Email</h4>

                        <div>
                            <div class="btn-group">

                                <a class="btn btn-primary btn-edit" asp-controller="Medicos" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-controller="Medicos" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                    <i class="fa-solid fa-eraser"></i>
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>

</div>



<script src="https://kit.fontawesome.com/47ea8ef61d.js" crossorigin="anonymous"></script>
 

<style>

    .card img {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }

</style> 