@model GestorPacientes.Core.Application.ViewModels.Pacientes.SavePacientesViewModel


<div class="row mb-3">

    <h2 class="text-center nav-link text-white fw-bold"> Eliminar Paciente </h2>

</div>

<div class="row mb-3">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-success text-light">
                <h4>Esta seguro que desea eliminar el Paciente @Model.Name?</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Pacientes" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id" />

                    <a asp-controller="Pacientes" asp-action="Index" class="btn btn-primary">Cancelar</a>
                    <button type="submit" class="btn btn-danger">Aceptar</button>

                </form>
            </div>
        </div>
    </div>
</div>

